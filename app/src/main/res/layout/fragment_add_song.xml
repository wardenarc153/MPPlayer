<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blackForBackground"
    tools:context=".MainPages.Admin.AddSongFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/first_edit_text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/GrayForFilter"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/name_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="Название песни"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/add_image"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/Gray"
        android:fontFamily="sans-serif-light"
        android:onClick="uploadImage"
        android:text="Добавить картинку"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_edit_text" />

    <Button
        android:id="@+id/add_song"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/Gray"
        android:fontFamily="sans-serif-light"
        android:onClick="uploadImage"
        android:text="Загрузить песню"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_image" />

    <Button
        android:id="@+id/finish_add_song"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/Gray"
        android:fontFamily="sans-serif-light"
        android:onClick="uploadImage"
        android:text="Добавить песню"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_song" />


    <GridLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:columnCount="6"
        android:background="@color/blackForBottom"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/main_menu_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/main_menu"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/about_prog_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/about_prog"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/instruction_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/instruction"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/git_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/git2"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/exit_logo"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/exit"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>